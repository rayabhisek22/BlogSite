<% include partials/header%>






<form action="/blogs" method="post" class="container border rounded bg-light" style="width:60%; padding:19px; margin-top:2.0em;">
  <h1 style="text-align:center;">New Blog</h1>
  <div class="font-weight-bold" style="margin:0 auto;">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" name="blog[title]" placeholder="Name" required class="form-control" id="title">
    </div>
    <div class="form-group">
      <label for="image">Image</label>
      <input type="text" name="blog[image]" placeholder="img-src" required class="form-control" id="image">
    </div>
    <div class="form-group">
      <label for="body">Body</label>
      <textarea name="blog[body]" placeholder="Description" required class="form-control" rows="5" id="body"></textarea>
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-outline-primary btn-md">Submit</button>
    </div>
  </div>
</form>





